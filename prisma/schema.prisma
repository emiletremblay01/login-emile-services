datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
    USER
    ADMIN
}
model User {
    role UserRole @default(USER)
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    websites Website[]
    email String? @unique
    password String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

type Website {
  url String
  nip String
}

